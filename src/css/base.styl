body
	background-image linear-gradient(to right top, #ff4444 50%, #fff 50%)
	background-repeat no-repeat
	background-size 100% calc(100% - 100vh + 5px)
	&:after
		content ''
		position fixed
		top 5px
		left 0
		bottom 0
		right 0
		background-color #fff
		z-index -1

.transform
	display flex
	justify-content space-between
	>span
		display inline-block
		width 100px;
		transition transform .6s
	>.before:last-child
		text-align right
	>.after:first-child
		transform translateX(calc(100vw - 100% - 30px))
		text-align right
	>.after:last-child
		transform translateX(calc(-100vw + 100% + 30px))

input[type=checkbox]
	// display none
	position absolute
	left -1000px
input[type=checkbox]+label:before
	display inline-block
	content " "
	border 1px solid #039be5
	font-size 12px
	line-height 10px
	margin 0 5px 0 0
	height 10px
	width 10px
	text-align center
	vertical-align middle

input[type=checkbox]:checked+label:before
	content "\2713"

.increment
	counter-reset sum
#check1:checked
	counter-increment sum
#check2:checked
	counter-increment sum
#check3:checked
	counter-increment sum 100
.sum:after
	content 'Sum: ' counter(sum)

p::selection
	background-color #00a862
	color #fff

.rating {
	font-size: 0;
	display: table;
}

.rating > label {
	color: #ddd;
	float: right;
}

.rating > label:before {
	padding: 5px;
	font-size: 24px;
	line-height: 1em;
	display: inline-block;
	content: "â˜…";
}

.rating > input:checked ~ label,
.rating:not(:checked) > label:hover,
.rating:not(:checked) > label:hover ~ label {
	color: #FFD700;
}

.rating > input:checked ~ label:hover,
.rating > label:hover ~ input:checked ~ label,
.rating > input:checked ~ label:hover ~ label {
	opacity: 0.5;
}

